extend type Query {
  works: [Work]
  findWorksByDate(date: String): [Work]
  findWorkedDates: [String]
  findWorkedYears: [String]
  findDaysOfMonth(work: FindDaysOfMonthInput): [String]
  findWorkedMonthsByYear(year: String): [String]
  findAllWorksByDate(date: String): [Work]
}

extend type Mutation {
  createWork(work: CreateWorkInput): Work
  deleteWork(uuid: String): Work
}

type Work {
  uuid: String
  serialNumber: String
  ledFix: Int
  model: String,
  description: String
  user: String
  team: String
  createDate: String
  dt: Boolean
  physicalDamage: Boolean
  factoryDefect: Boolean
  beyondRepair: Boolean
}

input CreateWorkInput {
  serialNumber: String
  ledFix: Int
  model: String
  dt: Boolean
  description: String
  physicalDamage: Boolean
  factoryDefect: Boolean
  beyondRepair: Boolean
}

input FindDaysOfMonthInput {
  year: Int
  month: Int
}
